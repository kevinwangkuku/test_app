<p id="notice"><%= notice %></p>


<h1>Orders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>票數</th>
      <th>讚</th>
      <th>噁心</th>
      <th>Phone</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
         <td><%= order.total_votes %></td>
        <td>
          <%= link_to vote_order_path(order, vote: true), class: "btn btn-primary", method: 'post' do %>
          讚
          <% end %>
        </td>

        <td>
          <%= link_to vote_order_path(order, vote: false), class: "btn btn-danger", method: 'post' do %>
          噁心
          <% end %>
        </td>
        
        <td><%= order.name %></td>
        <td><%= order.phone %></td>
        <td><%= order.description %></td>
        <td><%= link_to 'Show', order,class: "btn btn btn-success"  %></td>
        <%if logged_in? %>
        <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn btn-success" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if logged_in? %>
  <%= link_to 'New Order', new_order_path , class: "label label-default" %>
<% end %>

<p><a class="label label-default" href="#" role="button">Learn more</a></p>
</div>
